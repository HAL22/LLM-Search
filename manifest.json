{
    "name": "LLM Search Enhancer",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Chrome extension that enhances Google search with AI-powered query expansion and related topic suggestions",
    "permissions": [
      "activeTab", 
      "storage", 
      "history", 
      "geolocation",
      "tabs"
    ],
    "host_permissions": [
      "https://www.google.com/*",
      "https://*/*",
      "https://api.opencagedata.com/*",
      "https://nominatim.openstreetmap.org/*"
    ],
    "background": {
      "service_worker": "src/background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.google.com/search*", "https://*/*"],
        "js": [ "src/content.js"],
        "css": ["src/styles.css"]
      }
    ]
  }