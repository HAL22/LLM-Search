{
    "name": "LLM Search Enhancer",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Chrome extension that enhances search with AI-powered features",
    "permissions": [
      "activeTab", 
      "scripting",
      "geolocation"
    ],
    "host_permissions": [
      "*://*/*",
      "https://api.opencagedata.com/*"
    ],
    "background": {
      "service_worker": "src/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [ "src/content.js"],
        "css": ["src/styles.css"],
        "run_at": "document_end"
      }
    ]
  }